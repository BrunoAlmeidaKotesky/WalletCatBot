{
    "compilerOptions": {
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "allowJs": true,
        "noEmit": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es2019",
        "importHelpers": true,
        "outDir": "./dist",
        "baseUrl": "src",     
        "sourceMap": true,
        "noImplicitAny": false
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "tests",
        "examples"
      ],
      
}