{
    "compilerOptions": {
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "allowJs": true,
        "noEmit": false,
        "moduleResolution": "node",
        "module": "CommonJS",
        "target": "es6",
        "importHelpers": true,
        "outDir": "lib",
        "baseUrl": "src",     
        "sourceMap": true,
        "noImplicitAny": false,
        "lib": ["ES2020", "ESNext", "ES2020.String"]
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "tests",
        "examples",
        "lib",
        "**/__tests__/*"
      ],
      
}
