{
  "name": "Current TS File",
  "type": "node",
  "request": "launch",
  "args": ["${relativeFile}"],
  "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
  "sourceMaps": true,
  "cwd": "${workspaceRoot}",
  "protocol": "inspector",
  "configurations": [
  {
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "name": "nodemon",
      "program": "${workspaceFolder}/index.js",
      "request": "launch",
      "restart": true,
      "runtimeExecutable": "nodemon",
      "skipFiles": [
          "<node_internals>/**"
      ],
      "type": "pwa-node"
  }
  ]
}